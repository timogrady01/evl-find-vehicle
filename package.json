
# 1. Navigate to your project root
cd /path/to/evl-find-vehicle

# 2. Remove old dependencies
rm -rf node_modules package-lock.json

# 3. Update package.json with correct configuration
cat > package.json << 'EOF'
{
  "name": "evl-find-vehicle",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "vite": "^4.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0"
  }
}
EOF

# 4. Install dependencies clean
npm install

# 5. Ensure latest Vite and React plugin
npm install vite@latest @vitejs/plugin-react@latest

# 6. Start the dev server
npm run dev
